            "program": "${workspaceFolder}/${workspaceFolderBasename}",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
                },
            ]
        }
    ]
